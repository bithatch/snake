			<activation>
				<os>
					<family>Linux</family>
				</os>
			</activation>
			<dependencies>
				<dependency>
					<groupId>${project.groupId}</groupId>
					<version>${project.version}</version>
					<artifactId>snake-app-linux</artifactId>
				</dependency>
			</dependencies>
			<build>
