										<bootstrapModule>javafx-fxml-linux</bootstrapModule>
										<bootstrapModule>javafx-graphics</bootstrapModule>
										<bootstrapModule>javafx-graphics-linux</bootstrapModule>
										<bootstrapModule>FX-BorderlessScene</bootstrapModule>
									</bootstrapModules>
